{
  "name": "wechat-bot-client",
  "version": "1.0.0",
  "description": "微信AI助手客户端",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "wechaty": "^1.20.2",
    "wechaty-puppet-wechat4u": "^1.14.14"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.wechat.bot",
    "productName": "微信AI助手",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": ["dmg"]
    }
  },
  "type": "module"
}
